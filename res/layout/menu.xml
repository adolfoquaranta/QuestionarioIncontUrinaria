<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/menu_tvNomeTela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_tvWelcome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/menu_tvSelecioneOpcao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_tvInstrucoes" />

    <Button
        android:id="@+id/menu_btIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_btIniciar" />

    <Button
        android:id="@+id/menu_btGerarCSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_btGerarCSV" />

    <Button
        android:id="@+id/menu_btSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_btSair" />

</LinearLayout>