<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/quest2_tvInfoQualQuest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quest2_tvInfoQualQuest" />

    </LinearLayout>

    <TextView
        android:id="@+id/quest2_tvQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quest2_tvQuest"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/quest2_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/quest2_rS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SIM" 
            android:checked="false"  />
        	

        <RadioButton
            android:id="@+id/quest2_rN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/NAO" 
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:id="@+id/quest2_tvQuantos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Quantos"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/quest2_etQuantos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/quest2_btAnterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Anterior" />

        <Button
            android:id="@+id/quest2_btProximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Proximo" />

    </LinearLayout>

</LinearLayout>